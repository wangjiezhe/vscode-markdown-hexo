{
  "name": "vscode-markdown-hexo",
  "displayName": "vscode-markdown-hexo",
  "description": "Support hexo-style markdown preview",
  "version": "0.1.1",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "logo/hexo.png",
  "author": "Jiezhe Wang",
  "publisher": "wangjiezhe",
  "keywords": [
    "markdown",
    "markdown-it",
    "hexo"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/wangjiezhe/vscode-markdown-hexo.git"
  },
  "bugs": {
    "url": "https://github.com/wangjiezhe/vscode-markdown-hexo/issue"
  },
  "license": "MIT",
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "markdown.markdownItPlugins": true,
    "markdown.previewStyles": [
      "./css/svg.css",
      "./css/hexo.css"
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "postinstall": "patch-package"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/markdown-it": "^14.1.2",
    "@types/markdown-it-attrs": "^4.1.3",
    "@types/node": "25.x",
    "@types/vscode": "^1.109.0",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "npm-run-all": "^4.1.5",
    "patch-package": "^8.0.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "dependencies": {
    "js-yaml": "^4.1.1",
    "markdown-it-attrs": "^4.3.1",
    "markdown-it-front-matter": "^0.2.4"
  }
}
